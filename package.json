{
  "name": "haibara-tools",
  "version": "0.0.1",
  "description": "一站式实用工具集合，支持文件转换、AI视频转文档等功能",
  "author": {
    "name": "LZS911",
    "email": "againgl911@gamil.com"
  },
  "private": true,
  "type": "module",
  "main": "dist/electron/main.cjs",
  "scripts": {
    "dev": "tsx watch src/server/server.ts --clear-screen=false",
    "dev:debug": "tsx --inspect=9229 watch src/server/server.ts --clear-screen=false",
    "dev:debug-brk": "tsx --inspect-brk=9229 watch src/server/server.ts --clear-screen=false",
    "dev:electron-only": "pnpm build:electron && wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently --raw \"pnpm dev\" \"pnpm dev:electron-only\" -n vite,electron -c cyan,magenta",
    "build": "pnpm build:server && pnpm build:client",
    "build:client": "vite build && tsc --noEmit",
    "analyze:client": "cross-env ANALYZE=true pnpm build:client",
    "build:server": "vite build --mode server",
    "build:electron": "vite build --mode electron",
    "electron:build": "pnpm build:client && pnpm build:server && pnpm build:electron",
    "dist": "pnpm dist:clean && pnpm electron:build && electron-builder",
    "dist:all": " pnpm dist:clean && pnpm electron:build && electron-builder -mwl",
    "dist:win": "pnpm dist:clean && pnpm electron:build && electron-builder --win",
    "dist:mac": "pnpm dist:clean && pnpm electron:build && electron-builder --mac",
    "dist:linux": "pnpm dist:clean && pnpm electron:build && electron-builder --linux",
    "release:ci": "pnpm electron:build && electron-builder --publish onTag",
    "dist:clean": "rimraf release dist",
    "start": "cross-env NODE_ENV=production node dist/server/server.cjs",
    "test": "vitest run",
    "eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "prettier:w": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prettier:c": "prettier --check \"src/**/*.{ts,tsx}\"",
    "ts-check": "tsc --noEmit",
    "lint": "concurrently --raw \"pnpm prettier:c\" \"pnpm eslint\" \"pnpm ts-check\" -n prettier,eslint,ts-check -c cyan,magenta,yellow"
  },
